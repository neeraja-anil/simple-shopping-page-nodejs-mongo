<section>
  <div class="container ">
    <div class="row float-end m-4">
      {{#if adminid}}
      <a href="/admin/add-user" class="btn btn-outline-success" role="button">Add New User</a>
      {{/if}}
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">no</th>
          <th scope="col">id</th>
          <th scope="col">First Name</th>
          <th scope="col">Sur Name</th>
          <th scope="col">Email</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">1</th>
          <td>{{this._id}}</td>
          <td>{{this.fname}}</td>
          <td>{{this.sname}}</td>
          <td>{{this.email}}</td>
          <td>
            <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-user/{{this._id}}" class="btn btn-outline-danger"
              onclick="return confirm('Are You sure?')">Delete</a>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="row">
    </div>
  </div>
</section>